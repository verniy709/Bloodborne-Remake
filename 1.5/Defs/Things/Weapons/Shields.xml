                <shieldTags>
                    <li>BloodborneRemake_Shield</li>
                </shieldTags>
                <useDeflectMetalEffect>true</useDeflectMetalEffect>
                <coveredBodyPartGroups>
                    <li>Neck</li>
                    <li>Torso</li>
                    <li>Arms</li>
                    <li>Hands</li>
                    <li>Legs</li>
                </coveredBodyPartGroups>
                <offHandGraphicData>
                    <texPath>Things/Shields/LochShield</texPath>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <shaderType>CutoutComplex</shaderType>
                    <drawSize>0.85</drawSize>
                </offHandGraphicData>
                <offHandHoldOffset>
                    <northDefault>
                        <offset>(-0.15, 0, 0.20)</offset>
                        <behind>true</behind>
                    </northDefault>
                    <east>
                        <offset>(0.05, 0, 0.2)</offset>
                        <behind>true</behind>
                    </east>
                    <south>
                        <offset>(0.2, -0.04, 0.15)</offset>
                    </south>
                    <west>
                        <offset>(-0.05, 0, 0.2)</offset>
                    </west>
                </offHandHoldOffset>
            </li>
        </comps>
    </ThingDef>

    <ThingDef ParentName="BloodborneRemake_BaseShield">
        <defName>BloodborneRemake_TorchOff</defName>
        <label>(BBRe)TorchOff</label>
        <description>A common torch formed by wrapping a pine resin-drenched cloth around the end of a long stick. Hunters choose torches not only because the hunt leads them to the darkest nooks, but also because certain creatures they encounter are possessed of a deathly fear of flame.</description>
        <graphicData>
            <texPath>Things/Shields/TorchOff</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>0.90</drawSize>
        </graphicData>
        <costList>
            <WoodLog>10</WoodLog>
        </costList>
        <equippedAngleOffset>-15</equippedAngleOffset>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <ArmorRating_Sharp>0.05</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.05</ArmorRating_Blunt>
            <ArmorRating_Heat>0.05</ArmorRating_Heat>
            <WorkToMake>10</WorkToMake>
            <Mass>1.0</Mass>
        </statBases>
        <equippedStatOffsets>
            <MeleeHitChance>2</MeleeHitChance>
            <MentalBreakThreshold>-0.03</MentalBreakThreshold>
        </equippedStatOffsets>
        <verbs>
            <li>
                <label>torch</label>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>BloodborneRemake_Torch</defaultProjectile>
                <warmupTime>1.0</warmupTime>
                <range>7.9</range>
                <forcedMissRadius>0.9</forcedMissRadius>
                <soundCast>BloodborneRemake_Sound_Torch</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>12</muzzleFlashScale>
                <targetParams>
                    <canTargetLocations>true</canTargetLocations>
                </targetParams>
            </li>
        </verbs>
        <comps>
            <li Class="VFECore.CompProperties_Shield">
                <shieldTags>
                    <li>BloodborneRemake_Shield</li>
                </shieldTags>
                <useDeflectMetalEffect>false</useDeflectMetalEffect>
                <coveredBodyPartGroups>
                    <li>Neck</li>
                    <li>Torso</li>
                    <li>Arms</li>
                    <li>Hands</li>
                    <li>Legs</li>
                </coveredBodyPartGroups>
                <offHandGraphicData>
                    <texPath>Things/Shields/TorchOff</texPath>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <shaderType>CutoutComplex</shaderType>
                    <drawSize>0.90</drawSize>
                </offHandGraphicData>
                <offHandHoldOffset>
                    <northDefault>
                        <offset>(0.05, 0, 0.45)</offset>
                        <behind>true</behind>
                    </northDefault>
                    <east>
                        <offset>(0.05, 0, 0.35)</offset>
                        <behind>true</behind>
                    </east>
                    <south>
                        <offset>(0.075, -0.04, 0.35)</offset>
                    </south>
                    <west>
                        <offset>(-0.05, 0, 0.35)</offset>
                    </west>
                </offHandHoldOffset>
            </li>
            <li Class="MVCF.Comps.CompProperties_VerbGiver">
                <verbProps>
                    <li>
                        <label>torch</label>
                        <visualLabel>throw torch</visualLabel>
                        <canBeToggled>true</canBeToggled>
                    </li>
                </verbProps>
            </li>
        </comps>
    </ThingDef>

