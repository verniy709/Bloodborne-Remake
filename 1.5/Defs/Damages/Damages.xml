<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <DamageDef ParentName="Scratch">
    <defName>BloodborneRemake_Blood</defName>
    <label>blood attack</label>
    <deathMessage>{0} has been killed by blood attack.</deathMessage>
    <additionalHediffs>
      <li>
        <hediff>BloodLoss</hediff>
        <severityPerDamageDealt>0.05</severityPerDamageDealt>
        <victimSeverityScalingByInvBodySize>true</victimSeverityScalingByInvBodySize>
      </li>
    </additionalHediffs>
  </DamageDef>

  <DamageDef ParentName="BluntBase">
    <defName>BloodborneRemake_Arcane</defName>
    <label>arcane power</label>
    <deathMessage>{0} has been killed by arcane power.</deathMessage>
    <hediff>ChemicalBurn</hediff>
  </DamageDef>

  <DamageDef ParentName="Scratch">
    <defName>BloodborneRemake_ParasiteHit</defName>
    <label>parasite hit</label>
    <deathMessage>{0} has been killed by a parasite.</deathMessage>
    <additionalHediffs>
      <li>
        <hediff>BloodborneRemake_KosParasite_Infection</hediff>
        <severityPerDamageDealt>1</severityPerDamageDealt>
      </li>
    </additionalHediffs>
  </DamageDef>

  <DamageDef ParentName="StunBase">
    <defName>BloodborneRemake_HuntersNightmareHit</defName>
    <label>hunter's nightmare</label>
    <isExplosive>true</isExplosive>
    <deathMessage>{0} falls in sleep forever.</deathMessage>
    <harmsHealth>true</harmsHealth>
    <defaultDamage>1</defaultDamage>
    <explosionCellFleck>BloodborneRemake_BlastHuntersNightmare</explosionCellFleck>
    <explosionColorEdge>(1, 1, 1, 0.05)</explosionColorEdge>
    <explosionInteriorFleck>BloodborneRemake_CenterHuntersNightmare</explosionInteriorFleck>
    <soundExplosion>BloodborneRemake_Sound_Nightmare</soundExplosion>
    <additionalHediffs>
      <li>
        <hediff>BloodborneRemake_KosParasite_Witness</hediff>
        <severityPerDamageDealt>1</severityPerDamageDealt>
      </li>
    </additionalHediffs>
  </DamageDef>

  
  
</Defs>
